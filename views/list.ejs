<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">

  <!-- FOREACH PARA PERCORRER TODOS OS ITENS E RETORNAR APENAS O NOME -->
  <% newListItems.forEach(itemEncontrado => { %>
  <!-- FORM PARA POST DE CHECKBOX ATRAVES DE ID para deletar -->
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=itemEncontrado._id%>" onChange="this.form.submit()">
      <p><%=  itemEncontrado.name  %></p>
    </div>
    <input type="hidden" name="listName" value="<%=listTitle%>">
  </form>
  <%}); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>